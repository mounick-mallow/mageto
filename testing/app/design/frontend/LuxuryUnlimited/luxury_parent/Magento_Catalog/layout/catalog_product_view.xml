<page layout="2columns-right" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- DEVTASK-21844-performanceissue-p2 : remove unused css on the page -->
        <script src="Magento_Catalog::js/size_chart.js" />
        <remove src="Plumrocket_SocialLoginFree::css/pslogin.css" />
        <remove src="Plumrocket_SocialLoginFree::css/pslogin-custom.css" />
        <remove src="MaxMage_InternationalTelephoneInput::css/intlTelInput.css"/>
        <remove src="Sparsh_Faq::css/faq.css"/>
    </head>
    <body>
        <move element="breadcrumbs" destination="main.content" before="-" />
        <move element="product.info.review" destination="product.info.main" before="product.info.price"/>
        <move element="catalog.product.related" destination="product.info.details" after="-"/>
        <move element="product.info.overview" destination="product.info.main" after="product.info.price"/>
        <referenceContainer name="after.body.start">
            <block class="Magento\Catalog\Block\Product\View" name="product_custom" template="Magento_Catalog::product/view/product_custom.phtml" before="-"/>
            <block class="Smartwave\Porto\Block\Template" name="product_view_config" after="-" template="Magento_Catalog::product/view/config.phtml"/>
        </referenceContainer>
        <referenceContainer name="columns.top">
            <block class="Magento\Catalog\Block\Product\View" name="prev_next_products" template="Magento_Catalog::product/view/prev_next.phtml" before="-"/>
        </referenceContainer>
        <move element="prev_next_products" destination="product.info.main" before="-"/>
        <move element="page.main.title" destination="product.info.main" before="-"/>
        <referenceContainer name="product.info.social">
            <block class="Magento\Catalog\Block\Product\View" name="product.info.socialmedia" after="-"  template="Magento_Catalog::product/view/socialmedia.phtml"/>
        </referenceContainer>
        <referenceContainer name="content">
            <referenceContainer name="product.info.price" htmlClass="price-info-block desktopBlock">
                <container htmlTag="div" htmlClass="price-block" name="product.price.section"/>
                <block class="Magento\Catalog\Block\Product\View" name="product.info.price.match" template="product/view/price-match.phtml" after="product.info.price"/>
            </referenceContainer>
            <referenceContainer name="product.info.stock.sku" htmlClass="info-block" />
            <container htmlTag="div" htmlClass="product-detail-section" name="product.detail.section">
                <container htmlTag="div" htmlClass="product-detail-info" name="product.detail.info" before="-">
                    <block class="Magento\Catalog\Block\Product\View\Gallery" name="product.image.block" before="-" template="Magento_Catalog::product/view/media.phtml">
                        <arguments>
                            <argument name="gallery_options" xsi:type="object">Magento\Catalog\Block\Product\View\GalleryOptions</argument>
                            <argument name="porto_pdp_view_model" xsi:type="object">Smartwave\Porto\ViewModel\Data</argument>
                        </arguments>
                    </block>
                </container>
                <container htmlTag="div" htmlClass="rightContent desktopBlock" name="product.detail.rightContent" after="-">
                    <block class="Smartwave\Porto\Block\Template" name="product_view_addthis_links" after="-" template="Magento_Catalog::product/view/right-content.phtml"/>
                </container>
            </container>
            <block class="Smartwave\Porto\Block\RichSnippet" name="rich_snippet" template="Magento_Catalog::product/view/rich_snippet.phtml" before="-">
                <arguments>
                    <argument name="data_view_model" xsi:type="object">Smartwave\Porto\ViewModel\Data</argument>
                </arguments>
            </block>
            <block class="Smartwave\Porto\Block\Template" name="product_view_main_custom_block" ifconfig="porto_settings/product/main_custom_block" before="product.info.main" template="Magento_Catalog::product/view/main_custom_block.phtml"/>
            <block class="Smartwave\Porto\Block\Template" name="product_view_main_custom_block2" after="-" template="Magento_Catalog::product/view/main_custom_block2.phtml"/>
            <block class="Smartwave\Porto\Block\Template" name="product.clearer" after="product.image.block" template="Magento_Catalog::product/view/clearer.phtml"/>
            <block class="Smartwave\Porto\Block\Template" name="product_view_estimate_delivery" after="-" template="Magento_Catalog::product/view/estimated_delivery.phtml"/>
        </referenceContainer>

        <move element="product_view_main_custom_block2" destination="product.info.main" after="product.info.overview"/>
        <move element="product.info.main" destination="product.detail.info" after="product.image.block"/>
        <move element="product.info.details" destination="content" after="product.detail.section"/>
        <move element="product.price.final" destination="product.price.section" after="-"/>


        <referenceContainer name="columns">
            <block class="Smartwave\Porto\Block\Template" name="side_popup" after="-" template="Magento_Catalog::product/view/side_popup.phtml">
                <arguments>
                    <argument name="data_view_model" xsi:type="object">Smartwave\Porto\ViewModel\Data</argument>
                </arguments>
            </block>
            <block class="Smartwave\Porto\Block\Template" name="product.sizes" template="Magento_Catalog::product/view/size.phtml"/>
        </referenceContainer>
        <referenceContainer name="product.info.media" remove="true"/>
        <referenceBlock name="product.info.description" remove="true" />
        <referenceBlock name="product.info.review" remove="true" />
		<referenceBlock name="sidebar.additional" remove="true" />
		<referenceBlock name="sidebar" remove="true" />
        <move element="recently_viewed" destination="product.info.details"/>
        <referenceBlock name="product.info.upsell" remove="true"/>
        <referenceBlock name="product.info.details">
          	<block class="Magento\Catalog\Block\Product\ProductList\Upsell" template="Magento_Catalog::product/list/items.phtml" name="upsell.tab" as="upselltab" group="detailed_info" >
                <arguments>
                 	<argument translate="true" name="title" xsi:type="string">Recommendation</argument>
                 	<argument name="type" xsi:type="string">upsell</argument>
                </arguments>
                <block class="Magento\Catalog\Block\Product\ProductList\Item\Container" name="upsell.product.addto" as="addto">
                    <block class="Magento\Catalog\Block\Product\ProductList\Item\AddTo\Compare" name="upsell.product.addto.compare" as="compare" template="Magento_Catalog::product/list/addto/compare.phtml"/>
                </block>
          	</block>
                <referenceContainer name="content">
                    <block class="Magento\Catalog\Block\Product\View" name="product.info.recommendation-recent" template="product/view/recommendation-recent.phtml"/>
                    <block class="Magento\Catalog\Block\Product\View" name="product.info.special.size" template="Magento_Catalog::product/view/sepcial-size.phtml">
                        <arguments>
                            <argument name="view_model" xsi:type="object">LuxuryUnlimited\SizeAttribute\ViewModel\AttributeViewModel</argument>
                            <argument name="luxdb_price_match_view_model_pdp" xsi:type="object">Dynamic\Mytickets\ViewModel\PriceMatch</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Catalog\Block\Product\View" name="product.info.stock.notify" template="Magento_Catalog::product/view/stock-notify.phtml">
                        <arguments>
                            <argument name="view_model" xsi:type="object">LuxuryUnlimited\SizeAttribute\ViewModel\AttributeViewModel</argument>
                            <argument name="luxdb_price_match_view_model_pdp" xsi:type="object">Dynamic\Mytickets\ViewModel\PriceMatch</argument>
                        </arguments>
                    </block>
                </referenceContainer>
        </referenceBlock>
        <container name="final_container" as="someContainer" label="Some Container" htmlTag="div" htmlClass="some-container" />
        <move element="final_container" destination="product.info.main" before="product_view_estimate_delivery"/>
        <move element="product.info.stock.sku" destination="product.info.main" before="product.info.addtocart" />
        <move element="product.info" destination="final_container" after="-"/>
        <move element="product.sizes" destination="product.info.options.wrapper" before="product.info.social"/>
        <move element="product.info.social" destination="product.info.options.wrapper" after="-"/>
        <move element="product_view_estimate_delivery" destination="product.info.main" after="final_container"/>
        <referenceBlock name="product.info.addtocart">
            <arguments>
                <argument name="luxdb_price_match_view_model_pdp" xsi:type="object">Dynamic\Mytickets\ViewModel\PriceMatch</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="product.info.addtocart.additional">
            <arguments>
                <argument name="luxdb_price_match_view_model_pdp" xsi:type="object">Dynamic\Mytickets\ViewModel\PriceMatch</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="view.addto.wishlist" remove="true" />
    </body>
</page>

                               href="<?= $block->escapeHtml($_product->getProductUrl()) ?>">
                                <?= $block->escapeHtml($_helper->productAttribute(
                                    $_product,
                                    $_product->getName(),
                                    'name'
                                )); ?>
                            </a>
                        </strong>

                        <?php if ($showDescription):?>
                            <div class="product description product-item-description">
                                <?= $block->escapeHtml($_helper->productAttribute(
                                    $_product,
                                    $_product->getShortDescription(),
                                    'short_description'

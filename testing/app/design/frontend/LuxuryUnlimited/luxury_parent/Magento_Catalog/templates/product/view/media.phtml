        {
            "*": {
                "Magento_Catalog/js/media/page-type-fullwidth": {
                }
            }
        }
    </script>
<?php else: ?>
<div class="gallery-placeholder product-image-block _block-content-loading" data-gallery-role="gallery-placeholder">
</div>

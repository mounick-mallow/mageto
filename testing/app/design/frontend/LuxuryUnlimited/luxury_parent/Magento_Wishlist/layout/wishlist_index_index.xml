<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <!-- breadcrumbs -->
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">My Account</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">My Account</item>
                    <item name="label" xsi:type="string" translate="true">My Account</item>
                    <item name="link" xsi:type="string">{{baseUrl}}customer/account/</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">My Wishlist</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">My Wishlist</item>
                    <item name="label" xsi:type="string" translate="true">My Wishlist</item>
                </argument>
            </action>
        </referenceBlock>
        <move element="breadcrumbs" destination="main.content" before="-" />
        <move element="page.main.title" destination="columns.top" before="-"/>
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Js\Components" name="wishlist_head_components" template="Magento_Wishlist::js/components.phtml"/>
        </referenceBlock>
        <referenceContainer name="content">
            <referenceBlock name="customer.wishlist">
                <referenceBlock name="customer.wishlist.items">
                    <referenceBlock name="customer.wishlist.item.inner">
                        <referenceBlock name="customer.wishlist.item.actions">
                            <arguments>
                                <argument name="css_class" xsi:type="string">prodAction</argument>
                            </arguments>
                        </referenceBlock>
                    </referenceBlock>
                </referenceBlock>
            </referenceBlock>
        </referenceContainer>
        <referenceBlock name="customer.wishlist.item.comment" remove="true"/>
        <referenceBlock name="customer.wishlist.item.edit" remove="true"/>
        <referenceBlock name="customer.wishlist.item.cart" remove="true"/>
    </body>
</page>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Login</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="customer.login.container">
            <container name="customer.create.account" label="Customer Create Account" htmlTag="div" htmlClass="customer-create-account" />
            <!-- breadcrumbs -->
            <referenceBlock name="breadcrumbs">
                <action method="addCrumb">
                    <argument name="crumbName" xsi:type="string">Home</argument>
                    <argument name="crumbInfo" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Home</item>
                        <item name="label" xsi:type="string" translate="true">Home</item>
                        <item name="link" xsi:type="string">{{baseUrl}}</item>
                    </argument>
                </action>
                <action method="addCrumb">
                    <argument name="crumbName" xsi:type="string">Login</argument>
                    <argument name="crumbInfo" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Login</item>
                        <item name="label" xsi:type="string" translate="true">Login</item>
                    </argument>
                </action>
            </referenceBlock>
        </referenceContainer>
        <move element="breadcrumbs" destination="main.content" before="-" />
        <move element="sl-login-button" destination="customer.create.account" before="-"/>
        <move element="customer.new" destination="customer.create.account" after="-"/>
        <move element="page.main.title" destination="columns.top" before="-"/>
    </body>
</page>

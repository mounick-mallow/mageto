<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <container name="signup.account" label="Signup Account" htmlTag="div" htmlClass="signup-account-container" >
                <container name="customer.create.account" label="Customer Create Account" htmlTag="div" htmlClass="customer-create-account" after="-" >
                    <block class="Magento\Customer\Block\Form\Login\Info" name="customer.existing" template="Magento_Customer::existing-customer.phtml" after="-" />
                </container>
            </container>
        </referenceContainer>
        <move element="customer_form_register" destination="signup.account" before="-" />
        <move element="breadcrumbs" destination="main.content" before="-" />
        <referenceBlock name="breadcrumbs" remove="true" />
    </body>
</page>

<?xml version="1.0"?>
    <page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>        
        <referenceBlock name="breadcrumbs">
                <action method="addCrumb">
                    <argument name="crumbName" xsi:type="string">Home</argument>
                    <argument name="crumbInfo" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Home</item>
                        <item name="label" xsi:type="string" translate="true">Home</item>
                        <item name="link" xsi:type="string">{{baseUrl}}</item>
                    </argument>
                </action>
                <action method="addCrumb">
                    <argument name="crumbName" xsi:type="string">Sign Up</argument>
                    <argument name="crumbInfo" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Set New Password</item>
                        <item name="label" xsi:type="string" translate="true">Set New Password</item>
                    </argument>
                </action>
            </referenceBlock>
        <move element="breadcrumbs" destination="main.content" before="-" />
    </body>
</page>

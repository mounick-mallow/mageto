<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.addtocart">
            <block class="Magento\Catalog\Block\Product\View"
                   name="product.buynow"
                   template="Sololuxury_BuyNow::buynow-view.phtml"
                   before="-" ifconfig="buynow/general/enable_view">
                <arguments>
                    <argument name="buy_now_view_model" xsi:type="object">Sololuxury\BuyNow\ViewModel\BuyNow</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="product.info.addtocart.additional">
            <block class="Magento\Catalog\Block\Product\View"
                   name="product.buynow.config"
                   template="Sololuxury_BuyNow::buynow-view.phtml"
                   before="-" ifconfig="buynow/general/enable_view">
                <arguments>
                    <argument name="buy_now_view_model" xsi:type="object">Sololuxury\BuyNow\ViewModel\BuyNow</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>

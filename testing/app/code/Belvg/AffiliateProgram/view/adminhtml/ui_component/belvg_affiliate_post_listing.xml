<?xml version="1.0" encoding="UTF-8"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">belvg_affiliate_post_listing.belvg_affiliate_post_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>belvg_affiliate_post_columns</spinner>
        <deps>
            <dep>belvg_affiliate_post_listing.belvg_affiliate_post_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="belvg_affiliate_post_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">affiliate_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Magento_Backend::admin</aclResource>
        <dataProvider class="Belvg\AffiliateProgram\Ui\Grid\DataProvider" name="belvg_affiliate_post_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>affiliate_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="observers" xsi:type="array">
                    <item name="column" xsi:type="string">column</item>
                </item>
            </argument>
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
        </filters>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected items?</message>
                        <title translate="true">Delete items</title>
                    </confirm>
                    <url path="belvg_affiliate/post/delete" />
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="belvg_affiliate_post_columns">

        <selectionsColumn sortOrder="10" name="ids">
            <settings>
                <indexField>affiliate_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>55</resizeDefaultWidth>
            </settings>
        </selectionsColumn>
        <column sortOrder="20" name="affiliate_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column sortOrder="30" name="first_name">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">First Name</label>
            </settings>
        </column>
        <column sortOrder="40" name="last_name">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="validate-identifier" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Last Name</label>
            </settings>
        </column>
        <column sortOrder="50" name="email">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="validate-identifier" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Email</label>
            </settings>
        </column>
        <column sortOrder="60" name="phone">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="validate-identifier" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Phone</label>
            </settings>
        </column>
        <column sortOrder="70" name="website_url">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="validate-identifier" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Website Url</label>
            </settings>
        </column>
        <column sortOrder="80" name="visitors">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="validate-identifier" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Visitors</label>
            </settings>
        </column>
        <column sortOrder="90" name="views">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="validate-identifier" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Views</label>
            </settings>
        </column>
        <column sortOrder="100" name="street_address_1">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="validate-identifier" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Street Address 1</label>
            </settings>
        </column>
        <column sortOrder="110" name="street_address_2">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="validate-identifier" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Street Address 2</label>
            </settings>
        </column>
        <column sortOrder="120" name="city">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="validate-identifier" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">City</label>
            </settings>
        </column>
        <column sortOrder="130" name="country">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="validate-identifier" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Country</label>
            </settings>
        </column>
        <column sortOrder="140" name="post_code">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="validate-identifier" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Post Code</label>
            </settings>
        </column>
        <column sortOrder="150" name="creation_time" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created</label>
            </settings>
        </column>
        <column sortOrder="160" name="sent">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="validate-identifier" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Sent</label>
            </settings>
        </column>
    </columns>
</listing>

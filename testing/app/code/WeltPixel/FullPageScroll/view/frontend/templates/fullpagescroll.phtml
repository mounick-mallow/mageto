        require(['jquery', 'fullpagescroll'],
            function ($, FullPageScroll) {
                FullPageScroll.action(<?= /* @noEscape */ $_countBlocks; ?>);
                jQuery(window).trigger('resize');
            });
    </script>
<?php endif; ?>

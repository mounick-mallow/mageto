<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="pdp_page" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>PDP Page</label>
            <tab>Luxury_Unlimited</tab>
            <resource>LuxuryUnlimited_SizeAttribute::config_pdp_page</resource>
            <group id="size_attribute" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Size Attribute Configuration</label>
                <field id="attribute_option" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Select Size Attribute</label>
                    <comment>Based on the size attribute selection, the missing size option has been added to the dropdown.</comment>
                    <source_model>LuxuryUnlimited\SizeAttribute\Model\Config\Source\AttributeOptions</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
